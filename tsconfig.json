{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
